        const IndicatorCard = ({ title, severity, description }) => {
            const severityColors = {
                high: 'border-red-300 bg-red-50',
                medium: 'border-yellow-300 bg-yellow-50',
                low: 'border-blue-300 bg-blue-50'
            };

            const severityBadges = {
                high: 'bg-red-100 text-red-800',
                medium: 'bg-yellow-100 text-yellow-800',
                low: 'bg-blue-100 text-blue-800'
            };

            return (
                <div className={`border rounded-lg p-3 ${severityColors[severity]}`}>
                    <div className="flex items-start justify-between mb-1">
                        <h4 className="font-semibold text-gray-900">{title}</h4>
                        <span className={`text-xs px-2 py-1 rounded ${severityBadges[severity]}`}>
                            {severity.toUpperCase()}
                        </span>
                    </div>
                    <p className="text-sm text-gray-700">{description}</p>
                </div>
            );
        };

        const InterdictionReference = () => {
            const [searchTerm, setSearchTerm] = useState('');
            const [activeSection, setActiveSection] = useState('overview');
            const [expandedItems, setExpandedItems] = useState({});

            const toggleExpanded = (id) => {
                setExpandedItems(prev => ({ ...prev, [id]: !prev[id] }));
            };

            const sections = {
                overview: {
                    title: 'Operational Overview',
                    icon: Shield,
                    content: (
                        <div className="space-y-4">
                            <div className="bg-amber-50 border-l-4 border-amber-500 p-4">
                                <p className="text-sm font-semibold text-amber-900">Core Principle</p>
                                <p className="text-sm text-amber-800 mt-1">
                                    Highway interdiction is intelligence-led detection targeting the "weakest link" in criminal logistics: 
                                    the transport phase over open roads. Not random enforcement. Systematic pattern recognition.
                                </p>
                            </div>
                            
                            <div className="grid md:grid-cols-2 gap-4">
                                <div className="bg-white border border-gray-200 p-4 rounded">
                                    <h3 className="font-semibold text-gray-900 mb-2">Traditional Traffic Patrol</h3>
                                    <ul className="text-sm text-gray-700 space-y-1">
                                        <li>• Safety enforcement focus</li>
                                        <li>• Reactive to violations</li>
                                        <li>• Driver behavior regulation</li>
                                    </ul>
                                </div>
                                <div className="bg-white border border-gray-200 p-4 rounded">
                                    <h3 className="font-semibold text-gray-900 mb-2">Criminal Interdiction</h3>
                                    <ul className="text-sm text-gray-700 space-y-1">
                                        <li>• Proactive criminal detection</li>
                                        <li>• Behavioral psychology application</li>
                                        <li>• "All Crimes" methodology</li>
                                    </ul>
                                </div>
                            </div>

                            <div className="bg-gray-50 p-4 rounded">
                                <h3 className="font-semibold text-gray-900 mb-2">"All Crimes" Approach</h3>
                                <p className="text-sm text-gray-700">
                                    Same logistics networks transport narcotics, fraud proceeds, stolen vehicles, fugitives, trafficking victims, 
                                    and weapons. Focus on detection methodology, not single crime type. Drug courier uses hydraulic compartments; 
                                    human trafficker uses modified vans with removed seats. Different cargo, same transport vulnerability.
                                </p>
                            </div>
                        </div>
                    )
                },

                legal: {
                    title: 'Legal Framework',
                    icon: Scale,
                    content: (
                        <div className="space-y-4">
                            <div className="bg-red-50 border-l-4 border-red-500 p-4">
                                <p className="text-sm font-semibold text-red-900">Critical Legal Boundary</p>
                                <p className="text-sm text-red-800 mt-1">
                                    Pretextual stops are constitutional (Whren). Stop duration restrictions are absolute (Rodriguez). 
                                    Evidence suppression occurs when traffic mission is abandoned for drug investigation without independent reasonable suspicion.
                                </p>
                            </div>

                            <CollapsibleSection
                                id="whren"
                                title="Whren v. United States (1996)"
                                expanded={expandedItems['whren']}
                                toggle={() => toggleExpanded('whren')}
                            >
                                <div className="space-y-2 text-sm">
                                    <p className="font-semibold text-gray-900">Holding:</p>
                                    <p className="text-gray-700">
                                        Officer's subjective intent is legally irrelevant if objective basis for stop exists. 
                                        Minor traffic violation (following too close, lane deviation, equipment failure) provides legal authority 
                                        even when true motivation is drug investigation.
                                    </p>
                                    <p className="font-semibold text-gray-900 mt-3">Requirements:</p>
                                    <ul className="text-gray-700 space-y-1 ml-4">
                                        <li>• Traffic violation must be legitimate and provable</li>
                                        <li>• Cannot fabricate or rely on non-existent violations</li>
                                        <li>• Officer needs working knowledge of traffic law</li>
                                    </ul>
                                </div>
                            </CollapsibleSection>

                            <CollapsibleSection
                                id="rodriguez"
                                title="Rodriguez v. United States (2015)"
                                expanded={expandedItems['rodriguez']}
                                toggle={() => toggleExpanded('rodriguez')}
                            >
                                <div className="space-y-2 text-sm">
                                    <p className="font-semibold text-gray-900">Holding:</p>
                                    <p className="text-gray-700">
                                        Traffic stop becomes unlawful if prolonged beyond time reasonably required to complete the "mission" of the stop. 
                                        Dog sniff is not part of traffic mission. Cannot extend stop even for minutes without independent reasonable suspicion.
                                    </p>
                                    <p className="font-semibold text-gray-900 mt-3">Traffic Mission Components:</p>
                                    <ul className="text-gray-700 space-y-1 ml-4">
                                        <li>• Check driver's license</li>
                                        <li>• Check for outstanding warrants</li>
                                        <li>• Inspect registration and proof of insurance</li>
                                        <li>• Issue warning or citation</li>
                                    </ul>
                                    <p className="font-semibold text-gray-900 mt-3">Critical: Simultaneous Mission Doctrine</p>
                                    <p className="text-gray-700">
                                        Interdiction activities (K-9, extended questioning) permitted only if they don't add time to the stop. 
                                        Two-officer scenario: one continues traffic mission while second conducts K-9 sniff simultaneously. 
                                        If single officer pauses citation to call K-9, violation occurs.
                                    </p>
                                </div>
                            </CollapsibleSection>

                            <CollapsibleSection
                                id="clayborne"
                                title="Commonwealth v. Clayborne (2021) - Kentucky"
                                expanded={expandedItems['clayborne']}
                                toggle={() => toggleExpanded('clayborne')}
                            >
                                <div className="space-y-2 text-sm">
                                    <p className="text-gray-700">
                                        Evidence suppressed because officer stopped writing citation to call K-9 and explain process to driver. 
                                        This abandonment of traffic mission for drug mission without independent reasonable suspicion constituted 
                                        unconstitutional extension of seizure. Documents requirement for officers to multitask effectively and 
                                        document when reasonable suspicion developed.
                                    </p>
                                </div>
                            </CollapsibleSection>

                            <CollapsibleSection
                                id="wallstop"
                                title="Wall Stop Procedure"
                                expanded={expandedItems['wallstop']}
                                toggle={() => toggleExpanded('wallstop')}
                            >
                                <div className="space-y-2 text-sm">
                                    <p className="text-gray-700">
                                        Investigative team (DEA, narcotics task force, wiretap team) has probable cause or strong suspicion regarding 
                                        specific vehicle but doesn't want to compromise ongoing investigation or reveal confidential informant.
                                    </p>
                                    <p className="font-semibold text-gray-900 mt-3">Protocol:</p>
                                    <ul className="text-gray-700 space-y-1 ml-4">
                                        <li>• Uniformed patrol officer acts as "wall" between investigation and suspect</li>
                                        <li>• Officer must develop independent probable cause (observe traffic violation)</li>
                                        <li>• Cannot stop solely because investigative team requested it</li>
                                        <li>• Must behave as routine traffic encounter</li>
                                        <li>• Questions must be organic to stop, cannot reveal investigation knowledge</li>
                                    </ul>
                                    <p className="bg-yellow-50 p-2 mt-2 rounded text-gray-700">
                                        <span className="font-semibold">Risk:</span> Questions revealing specific knowledge ("Where is the heroin in the rocker panels?") 
                                        burn the investigation and source. Relies entirely on Whren: if traffic violation is real, hidden motive is legally irrelevant.
                                    </p>
                                </div>
                            </CollapsibleSection>
                        </div>
                    )
                },

                indicators: {
                    title: 'Pre-Stop Indicators',
                    icon: Eye,
                    content: (
                        <div className="space-y-4">
                            <div className="bg-blue-50 border-l-4 border-blue-500 p-4">
                                <p className="text-sm font-semibold text-blue-900">Observation Phase: "The Drive"</p>
                                <p className="text-sm text-blue-800 mt-1">
                                    Criminal courier operates under psychological stress of transporting illicit cargo carrying decades of imprisonment risk. 
                                    Stress manifests as deviations from baseline driving behavior. No single indicator is conclusive—look for clusters.
                                </p>
                            </div>

                            <div className="space-y-3">
                                <IndicatorCard
                                    title="The 'Locked' Stare (The Statue)"
                                    severity="high"
                                    description="Driver rigidly fixes eyes forward, refuses to turn head even slightly when police unit visible. Conscious, forced effort to appear 'normal' creates unnatural rigidity. Normal drivers are curious—they look at marked units."
                                />

                                <IndicatorCard
                                    title="Mirror Fixation"
                                    severity="high"
                                    description="Obsessive, repetitive mirror monitoring once police unit is behind them. Not casual safe-driver check. Accompanied by visible shifting, reaching for items, animated conversation triggered solely by police presence."
                                />

                                <IndicatorCard
                                    title="Erratic Driving Corrections"
                                    severity="medium"
                                    description="Sudden deceleration to exactly speed limit (or well below). Rigid, forced lane maintenance. 'Lane camping' in right lane to avoid passing officer. Abrupt highway exits to evade unit."
                                />

                                <IndicatorCard
                                    title="Third-Party Rental Vehicle"
                                    severity="high"
                                    description="Driver is not the renter. Bar codes on windows (fleet vehicles). No dealer frames. No personalized stickers. 'Straw renter' tactic insulates organization leadership from asset seizure risk."
                                />

                                <IndicatorCard
                                    title="One-Way Rental"
                                    severity="high"
                                    description="Long-distance one-way rental (El Paso to Chicago) is economically inefficient for legitimate travel compared to flying. Essential for contraband transport."
                                />

                                <IndicatorCard
                                    title="'Sterile' vs. 'Lived-In' Conflict"
                                    severity="medium"
                                    description="Cross-country vehicle completely void of trash, luggage, or personal items suggests 'turn-and-burn' delivery trip, not vacation or relocation. Dirty exterior with pristine interior indicates recent tampering. Clean car with trash-filled interior suggests long, hurried trip. Discrepancy is the key."
                                />

                                <IndicatorCard
                                    title="Masking Odors"
                                    severity="medium"
                                    description="Multiple air fresheners, dryer sheets, coffee grounds. Overwhelming scent used to mask contraband odors or overwhelm K-9 olfactory senses."
                                />

                                <IndicatorCard
                                    title="Visible Tampering"
                                    severity="high"
                                    description="New bolts on old plates. Stripped screws. Plates don't match mounting bracket. Heavy aftermarket tint on rental. Luggage that doesn't match occupants. Cargo covered by blankets suggesting concealment rather than protection."
                                />
                            </div>

                            <div className="bg-gray-50 p-4 rounded">
                                <h3 className="font-semibold text-gray-900 mb-2">Positioning for Observation</h3>
                                <ul className="text-sm text-gray-700 space-y-1">
                                    <li>• Perpendicular to roadway: Profile view of passing vehicles. See driver posture, occupant count, vehicle stance (weighted down)</li>
                                    <li>• On-ramp/median turnaround: Evaluate reaction indicators as officer pulls into traffic</li>
                                </ul>
                            </div>
                        </div>
                    )
                },

                interview: {
                    title: 'Roadside Interview',
                    icon: FileText,
                    content: (
                        <div className="space-y-4">
                            <div className="bg-purple-50 border-l-4 border-purple-500 p-4">
                                <p className="text-sm font-semibold text-purple-900">Interview Objective</p>
                                <p className="text-sm text-purple-800 mt-1">
                                    "Conversation with a purpose" designed to elicit truth or expose deception. Normalize interaction, then observe deviations. 
                                    Goal: establish baseline, then identify cognitive load spikes during trip-detail questions.
                                </p>
                            </div>

                            <CollapsibleSection
                                id="baseline"
                                title="Establishing Baseline"
                                expanded={expandedItems['baseline']}
                                toggle={() => toggleExpanded('baseline')}
                            >
                                <div className="space-y-2 text-sm text-gray-700">
                                    <p>Simple, non-threatening questions:</p>
                                    <ul className="ml-4 space-y-1">
                                        <li>• "How are you doing today?"</li>
                                        <li>• "Where are you heading?"</li>
                                        <li>• "Do you still live at the address on your license?"</li>
                                    </ul>
                                    <p className="mt-2">
                                        Gauge baseline speech patterns, eye contact, nervousness. Driver who stutters during basic questions may just be nervous about police. 
                                        Driver calm during basic questions but spikes anxiety during trip details shows deceptive indicator.
                                    </p>
                                </div>
                            </CollapsibleSection>

                            <CollapsibleSection
                                id="hookquestions"
                                title="'Hook' Questions"
                                expanded={expandedItems['hookquestions']}
                                toggle={() => toggleExpanded('hookquestions')}
                            >
                                <div className="space-y-3 text-sm">
                                    <div>
                                        <p className="font-semibold text-gray-900">Itinerary Consistency</p>
                                        <ul className="text-gray-700 ml-4 space-y-1 mt-1">
                                            <li>• "Where are you coming from?"</li>
                                            <li>• "How long were you there?"</li>
                                            <li>• "What was the purpose of the trip?"</li>
                                        </ul>
                                        <p className="text-gray-700 mt-2">
                                            <span className="font-semibold">Logical Test:</span> Driver traveling LA to NYC for two-day visit is logistically inconsistent. 
                                            Drive cost and time outweigh short stay benefit. Suggests drive is the mission (goods transport), not destination.
                                        </p>
                                    </div>

                                    <div>
                                        <p className="font-semibold text-gray-900">Relationship Verification</p>
                                        <ul className="text-gray-700 ml-4 space-y-1 mt-1">
                                            <li>• "How do you know your passenger?"</li>
                                            <li>• "How long have you known them?"</li>
                                        </ul>
                                        <p className="text-gray-700 mt-2">
                                            <span className="font-semibold">Separation Technique:</span> Ask driver to exit vehicle (Pennsylvania v. Mimms permits this) 
                                            to check registration or discuss warning. Ask driver about passenger's name and trip details at patrol car. 
                                            Return to passenger with same questions. Story discrepancies (Driver: "We are cousins"; Passenger: "Old friends from work") 
                                            are powerful deception indicators.
                                        </p>
                                    </div>
                                </div>
                            </CollapsibleSection>

                            <CollapsibleSection
                                id="deception"
                                title="Deception Indicators"
                                expanded={expandedItems['deception']}
                                toggle={() => toggleExpanded('deception')}
                            >
                                <div className="space-y-3 text-sm">
                                    <div>
                                        <p className="font-semibold text-gray-900">Verbal Indicators</p>
                                        <ul className="text-gray-700 space-y-2 mt-1">
                                            <li>• <span className="font-semibold">Answering question with question:</span> "Where am I coming from?" (Buys time to construct lie or check if officer knows answer)</li>
                                            <li>• <span className="font-semibold">"Religiosity" defense:</span> Excessive swearing on family/God. "I swear to God, officer, on my mother's grave, I'm just going home." Honest people don't invoke divine verification for simple facts.</li>
                                            <li>• <span className="font-semibold">Over-specificity:</span> Unrequested minute details. "Stopped at Burger King on 4th street at 12:05 PM, had a Whopper..." Attempts to convince through volume of detail.</li>
                                            <li>• <span className="font-semibold">Non-answer:</span> "Just driving around" or "Nowhere special" when asked for destination.</li>
                                        </ul>
                                    </div>

                                    <div>
                                        <p className="font-semibold text-gray-900">Non-Verbal Indicators</p>
                                        <ul className="text-gray-700 space-y-2 mt-1">
                                            <li>• <span className="font-semibold">Carotid artery pulse:</span> Visible neck pulsing indicates massive heart rate/blood pressure spike. Physiological "fight or flight" response.</li>
                                            <li>• <span className="font-semibold">Grooming gestures:</span> Picking lint, smoothing hair, adjusting mirrors unnecessarily. Displacement activities to relieve nervous energy.</li>
                                            <li>• <span className="font-semibold">"Felony stretch":</span> Excessive yawning/stretching. Physiological attempt to get more oxygen to brain during high-stress moment, masquerading as fatigue.</li>
                                            <li>• <span className="font-semibold">Freezing:</span> "Hands at 10 and 2" posture, staring straight ahead, refusing to look at officer while speaking. Lack of hand gestures (illustrators) that accompany normal speech indicates high cognitive load and restraint.</li>
                                        </ul>
                                    </div>
                                </div>
                            </CollapsibleSection>

                            <CollapsibleSection
                                id="reasonablesuspicion"
                                title="Developing Reasonable Suspicion"
                                expanded={expandedItems['reasonablesuspicion']}
                                toggle={() => toggleExpanded('reasonablesuspicion')}
                            >
                                <div className="space-y-2 text-sm">
                                    <p className="text-gray-700">
                                        Transition from routine traffic stop to criminal detention occurs when "totality of circumstances" yields Reasonable Suspicion (RS). 
                                        No single indicator sufficient. Must be combination painting picture of criminal activity.
                                    </p>
                                    <div className="bg-gray-100 p-3 rounded mt-2">
                                        <p className="font-semibold text-gray-900">RS Articulation Example:</p>
                                        <p className="text-gray-700 mt-1">
                                            "Driver operating third-party rental vehicle on known drug corridor (I-75). Stated traveling for 2-day vacation requiring 
                                            30 hours driving—logistical impossibility for leisure trip. Hands trembling visibly, carotid artery pulsing, could not name 
                                            passenger despite claiming 'good friends.' Vehicle smelled of overwhelming air freshener quantity. No luggage visible for multi-day trip."
                                        </p>
                                    </div>
                                    <p className="text-gray-700 mt-2">
                                        This cluster allows detention beyond ticket time to deploy K-9 or request consent to search, satisfying Rodriguez and Whren requirements.
                                    </p>
                                </div>
                            </CollapsibleSection>
                        </div>
                    )
                },

                search: {
                    title: 'Vehicle Search',
                    icon: Car,
                    content: (
                        <div className="space-y-4">
                            <div className="bg-green-50 border-l-4 border-green-500 p-4">
                                <p className="text-sm font-semibold text-green-900">Search Foundation</p>
                                <p className="text-sm text-green-800 mt-1">
                                    Before search: establish Probable Cause (PC) or obtain valid Consent. 
                                    Systematic, rote search pattern required. Haphazard "rummaging" misses sophisticated hides.
                                </p>
                            </div>

                            <CollapsibleSection
                                id="searchauthority"
                                title="Establishing Search Authority"
                                expanded={expandedItems['searchauthority']}
                                toggle={() => toggleExpanded('searchauthority')}
                            >
                                <div className="space-y-2 text-sm">
                                    <div>
                                        <p className="font-semibold text-gray-900">Consent</p>
                                        <p className="text-gray-700">Must be voluntary and uncoerced. Ask clearly: "May I search your vehicle?" 
                                        Consent can be limited or revoked by subject at any time.</p>
                                    </div>
                                    <div className="mt-2">
                                        <p className="font-semibold text-gray-900">Probable Cause</p>
                                        <p className="text-gray-700">Allows warrantless search under "Automobile Exception" (Carroll Doctrine). 
                                        PC established via K-9 alert, plain view of contraband, plain smell (marijuana—evolving in legal states), or driver admission.</p>
                                    </div>
                                </div>
                            </CollapsibleSection>

                            <CollapsibleSection
                                id="searchmethod"
                                title="Systematic Search Pattern"
                                expanded={expandedItems['searchmethod']}
                                toggle={() => toggleExpanded('searchmethod')}
                            >
                                <div className="space-y-2 text-sm">
                                    <p className="font-semibold text-gray-900">Rule of Voids</p>
                                    <p className="text-gray-700">
                                        Every vehicle has natural voids—hollow spaces for mechanics, soundproofing, airflow. Smugglers exploit these voids. 
                                        Goal: distinguish natural void from "loaded" void.
                                    </p>
                                    <p className="font-semibold text-gray-900 mt-3">Zone-Based Pattern</p>
                                    <p className="text-gray-700">
                                        Divide search into zones (Front Bumper, Engine, Dashboard, Front Seats, Rear Seats, Rear Deck, Trunk, Rear Bumper, Undercarriage). 
                                        Search one zone completely before moving to next. Ensures no area skipped or forgotten.
                                    </p>
                                </div>
                            </CollapsibleSection>

                            <CollapsibleSection
                                id="searchzones"
                                title="Zone-Specific Indicators"
                                expanded={expandedItems['searchzones']}
                                toggle={() => toggleExpanded('searchzones')}
                            >
                                <div className="space-y-3 text-sm">
                                    <div>
                                        <p className="font-semibold text-gray-900">Exterior/Undercarriage</p>
                                        <ul className="text-gray-700 space-y-1 ml-4">
                                            <li>• <span className="font-semibold">Fresh undercoating:</span> Black rubberized coating hides new welds, cuts, access panels on gas tank or frame rails. Wet or sticky appearance suspect.</li>
                                            <li>• <span className="font-semibold">Tool marks:</span> Scratches or stripped paint on gas tank straps, bumper covers, fender well bolts. Factory bolts pristine and painted over. Marks indicate removal and reinstallation.</li>
                                            <li>• <span className="font-semibold">Tires:</span> "Solid" narcotics inside tires. Striking tire with mallet: filled tire sounds dull/thuds, normal air-filled tire sounds hollow/rings. Density meter (Buster) provides definitive reading.</li>
                                        </ul>
                                    </div>

                                    <div>
                                        <p className="font-semibold text-gray-900">Interior</p>
                                        <ul className="text-gray-700 space-y-1 ml-4">
                                            <li>• <span className="font-semibold">Carpet/trim:</span> Check loose kick plates or door sills. Pull back carpet for access holes cut into floorboard or trap doors leading to frame rails.</li>
                                            <li>• <span className="font-semibold">Seats:</span> Unzip seat covers, palpate seat backs. Narcotics often in seat foam or void between upholstery and frame.</li>
                                            <li>• <span className="font-semibold">Dashboard:</span> Look for non-factory switches. Toggle switch hidden under steering column, inside glove box, or near hood release often activates electronic trap. Check air vents—if air doesn't blow out of one, may be blocked by kilo package.</li>
                                            <li>• <span className="font-semibold">Center console:</span> Prime aftermarket trap location. Look for loose screws, console sitting higher than factory spec, reduced depth of storage bin.</li>
                                        </ul>
                                    </div>
                                </div>
                            </CollapsibleSection>

                            <CollapsibleSection
                                id="traps"
                                title="Electronic Hidden Compartments (Traps)"
                                expanded={expandedItems['traps']}
                                toggle={() => toggleExpanded('traps')}
                            >
                                <div className="space-y-2 text-sm">
                                    <p className="text-gray-700">
                                        Sophisticated DTOs use hydraulically or electronically operated compartments invisible to naked eye.
                                    </p>
                                    <p className="font-semibold text-gray-900 mt-2">Activation Sequences</p>
                                    <p className="text-gray-700">
                                        Complex action sequences prevent accidental discovery. Example: turn on rear defrost, put car in neutral, press magnetic switch simultaneously.
                                    </p>
                                    <p className="font-semibold text-gray-900 mt-2">Trap Indicators</p>
                                    <ul className="text-gray-700 space-y-1 ml-4">
                                        <li>• <span className="font-semibold">Aftermarket wiring:</span> Wires that don't look factory (different color, sloppy taping, running to odd locations like windshield wipers or defroster relay).</li>
                                        <li>• <span className="font-semibold">Relays/solenoids:</span> Inexplicable solenoid or relay clicking when switches hit. Signs of electronic actuator.</li>
                                        <li>• <span className="font-semibold">Missing airbags:</span> Passenger airbags removed to create trap void. Dashboard looks re-glued or airbag light on/disabled—investigate airbag compartment.</li>
                                    </ul>
                                </div>
                            </CollapsibleSection>

                            <CollapsibleSection
                                id="searchtech"
                                title="Search Technology"
                                expanded={expandedItems['searchtech']}
                                toggle={() => toggleExpanded('searchtech')}
                            >
                                <div className="space-y-2 text-sm">
                                    <div>
                                        <p className="font-semibold text-gray-900">Density Meters ("Buster")</p>
                                        <p className="text-gray-700">
                                            Uses low-level radiation to measure object density. "Sees" through metal, plastic, wood. 
                                            When scanning gas tank, reading should be consistent with liquid. Density spike indicates solid mass (drugs) floating in tank.
                                        </p>
                                    </div>
                                    <div className="mt-2">
                                        <p className="font-semibold text-gray-900">Fiberscopes/Borescopes</p>
                                        <p className="text-gray-700">
                                            Look into gas tanks, door panels, air vents without dismantling vehicle. 
                                            Essential for confirming contraband presence in hard-to-reach voids.
                                        </p>
                                    </div>
                                </div>
                            </CollapsibleSection>
                        </div>
                    )
                },

                safety: {
                    title: 'Safety Protocols',
                    icon: AlertTriangle,
                    content: (
                        <div className="space-y-4">
                            <div className="bg-red-50 border-l-4 border-red-500 p-4">
                                <p className="text-sm font-semibold text-red-900">High-Risk Environment</p>
                                <p className="text-sm text-red-800 mt-1">
                                    Interdiction stops often occur alone on rural highways, miles from backup, stopping subjects transporting millions in illicit cargo. 
                                    Absolute safety discipline required.
                                </p>
                            </div>

                            <CollapsibleSection
                                id="tactical"
                                title="Tactical Approach"
                                expanded={expandedItems['tactical']}
                                toggle={() => toggleExpanded('tactical')}
                            >
                                <div className="space-y-2 text-sm">
                                    <div>
                                        <p className="font-semibold text-gray-900">Passenger Side Approach (Recommended)</p>
                                        <ul className="text-gray-700 space-y-1 ml-4">
                                            <li>• Keeps officer out of traffic flow (reduces struck-by-vehicle risk)</li>
                                            <li>• Driver expects left approach—focuses attention there. Passenger side provides tactical surprise.</li>
                                            <li>• View entire passenger compartment, driver's hands, center console before being detected</li>
                                            <li>• Forces driver to turn away from steering wheel to speak, limiting mobility</li>
                                        </ul>
                                    </div>
                                    <div className="mt-2">
                                        <p className="font-semibold text-gray-900">Trunk Check</p>
                                        <p className="text-gray-700">
                                            Press down on trunk lid while walking by. Ensures trunk latched (prevents ambush from hidden gunman). 
                                            Leaves latent fingerprint as forensic evidence of officer presence.
                                        </p>
                                    </div>
                                    <div className="mt-2">
                                        <p className="font-semibold text-gray-900">Positioning</p>
                                        <p className="text-gray-700">
                                            Patrol car 15-20 feet back, offset left. Creates "safety lane" for walking. 
                                            Provides engine block as cover in firefight.
                                        </p>
                                    </div>
                                </div>
                            </CollapsibleSection>

                            <CollapsibleSection
                                id="fentanyl"
                                title="Fentanyl & Xylazine Protocols"
                                expanded={expandedItems['fentanyl']}
                                toggle={() => toggleExpanded('fentanyl')}
                            >
                                <div className="space-y-3 text-sm">
                                    <div className="bg-red-100 p-3 rounded">
                                        <p className="font-semibold text-red-900">Critical: No Field Testing of Powders</p>
                                        <p className="text-red-800 mt-1">
                                            Do not field test suspected fentanyl powder in wind or inside vehicle. Aerosolization risk (blowing powder into air and inhaling) too high. 
                                            Seal substance, send to lab.
                                        </p>
                                    </div>

                                    <div>
                                        <p className="font-semibold text-gray-900">Xylazine ("Tranq") Risks</p>
                                        <p className="text-gray-700">
                                            Veterinary sedative, not opioid. Naloxone (Narcan) does not reverse xylazine effects. 
                                            Often mixed with fentanyl—administer Narcan in overdose/exposure scenarios, but rescue breathing and airway management critical if no Narcan response.
                                        </p>
                                    </div>

                                    <div>
                                        <p className="font-semibold text-gray-900">PPE Requirements</p>
                                        <ul className="text-gray-700 space-y-1 ml-4">
                                            <li>• Nitrile gloves mandatory for every search</li>
                                            <li>• N95 or P100 mask if visible powder present</li>
                                            <li>• Long sleeves prevent skin absorption</li>
                                        </ul>
                                    </div>

                                    <div>
                                        <p className="font-semibold text-gray-900">Exposure Response</p>
                                        <p className="text-gray-700">
                                            Skin contact: wash immediately with soap and water. Do not use hand sanitizer (alcohol opens pores, increases absorption). 
                                            Primary danger is inhalation or ingestion, not incidental skin contact if washed promptly.
                                        </p>
                                    </div>

                                    <div>
                                        <p className="font-semibold text-gray-900">Decontamination</p>
                                        <ul className="text-gray-700 space-y-1 ml-4">
                                            <li>• Wash hands with soap and water after every search (even with gloves)</li>
                                            <li>• Clean patrol car steering wheel, gear shift, radio with wipes (prevent cross-contamination)</li>
                                            <li>• Do not eat, drink, touch face until hands washed</li>
                                            <li>• Bag powder-exposed uniforms separately, wash apart from other clothing</li>
                                        </ul>
                                    </div>
                                </div>
                            </CollapsibleSection>

                            <CollapsibleSection
                                id="ambush"
                                title="Ambush Prevention"
                                expanded={expandedItems['ambush']}
                                toggle={() => toggleExpanded('ambush')}
                            >
                                <div className="space-y-2 text-sm">
                                    <p className="font-semibold text-gray-900">Red Flags for Attack</p>
                                    <ul className="text-gray-700 space-y-1 ml-4">
                                        <li>• "Thousand-yard stare"</li>
                                        <li>• Target glancing (looking at officer's gun or holster)</li>
                                        <li>• Sudden, exaggerated cooperation</li>
                                        <li>• Driver exits vehicle unbidden, walks toward officer (immediate threat cue requiring tactical response)</li>
                                    </ul>
                                    <p className="font-semibold text-gray-900 mt-2">Lighting Discipline (Night)</p>
                                    <p className="text-gray-700">
                                        Use takedown lights and spotlights to blind suspect vehicle rear. Obscures officer approach, allows viewing into suspect vehicle while officer remains in shadows.
                                    </p>
                                </div>
                            </CollapsibleSection>
                        </div>
                    )
                }
            };

            const quickReference = [
                { category: "Vehicle", indicator: "Third-Party Rental", significance: "Driver not renter; distances trafficker from asset" },
                { category: "Vehicle", indicator: "'Sterile' Interior", significance: "Long trip story conflicts with car void of trash/luggage—quick turnaround delivery" },
                { category: "Vehicle", indicator: "Masking Odors", significance: "Multiple air fresheners, dryer sheets, coffee grounds—overwhelm K-9/officer senses" },
                { category: "Occupant", indicator: "Conflicting Stories", significance: "Driver and passenger give different details on origin/destination/relationship—lack of rehearsal" },
                { category: "Occupant", indicator: "'The Drive' Rigidity", significance: "Rigid posture, refusal to look at police, lane camping—high stress, desire to avoid attention" },
                { category: "Occupant", indicator: "Hyper-Nervousness", significance: "Visible carotid pulse, trembling hands, 'felony stretch' (yawning)—exceeds normal traffic stop anxiety" },
                { category: "Vehicle Trap", indicator: "Marred Screws", significance: "Tool marks on trim, dashboard, fender bolts—recent removal for contraband hiding" },
                { category: "Vehicle Trap", indicator: "Electrical Anomalies", significance: "Non-factory wires, switches, clicking relays—power magnetic locks or hydraulic lifts for traps" },
                { category: "Document", indicator: "One-Way Rental", significance: "High-cost long-distance one-way trip economically inefficient for leisure, common for trafficking" }
            ];

            const searchZones = [
                { zone: "1. Exterior", areas: "Tires (density), Wheel Wells (fresh undercoat), License Plates (tool marks)", tools: "Mallet, Flashlight, Buster" },
                { zone: "2. Engine", areas: "Firewall (false compartments), Air Filter housing, Battery (hollowed out)", tools: "Flashlight, Screwdriver" },
                { zone: "3. Dashboard", areas: "Vents (blocked air), Airbag compartment (void), Glove box (hidden switches)", tools: "Fiberscope, Trim tool" },
                { zone: "4. Front Seats", areas: "Headrests, Seat backs (hollow voids), Under carpet", tools: "Hands (Palpation)" },
                { zone: "5. Floor/Console", areas: "Center console (false bottom), Gear shift (transmission hump voids)", tools: "Screwdriver, Flashlight" },
                { zone: "6. Rear Seats", areas: "Bench seat removal, Ski pass-through (into trunk), Side panels", tools: "Pry tool" },
                { zone: "7. Trunk", areas: "Spare tire (density), Quarter panels (natural voids), Rear deck lid", tools: "Buster, Fiberscope" },
                { zone: "8. Undercarriage", areas: "Gas tank (dropped/welded), Frame rails (items inside), Exhaust heat shields", tools: "Creeper/Mirror" }
            ];

            const filteredContent = useMemo(() => {
                if (!searchTerm) return null;
                
                const term = searchTerm.toLowerCase();
                const results = [];
                
                Object.entries(sections).forEach(([key, section]) => {
                    const contentStr = JSON.stringify(section.content).toLowerCase();
                    if (section.title.toLowerCase().includes(term) || contentStr.includes(term)) {
                        results.push({ key, ...section });
                    }
                });
                
                return results;
            }, [searchTerm]);

            return (
                <div className="min-h-screen bg-gray-50">
                    <div className="bg-gray-900 text-white p-6 shadow-lg">
                        <h1 className="text-3xl font-bold mb-2">Highway Interdiction Reference</h1>
                        <p className="text-gray-300 text-sm">Strategic operational doctrine for criminal interdiction</p>
                    </div>

                    <div className="max-w-7xl mx-auto p-6">
                        <div className="relative mb-6">
                            <Search className="absolute left-3 top-3 h-5 w-5 text-gray-400" />
                            <input
                                type="text"
                                placeholder="Search indicators, case law, procedures..."
                                className="w-full pl-10 pr-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                                value={searchTerm}
                                onChange={(e) => setSearchTerm(e.target.value)}
                            />
                        </div>

                        {searchTerm && filteredContent && (
                            <div className="mb-6 bg-white p-4 rounded-lg border border-blue-200">
                                <h3 className="font-semibold text-gray-900 mb-2">
                                    {filteredContent.length} result{filteredContent.length !== 1 ? 's' : ''} found
                                </h3>
                                <div className="space-y-2">
                                    {filteredContent.map(result => (
                                        <button
                                            key={result.key}
                                            onClick={() => {
                                                setActiveSection(result.key);
                                                setSearchTerm('');
                                            }}
                                            className="block w-full text-left p-2 hover:bg-gray-50 rounded"
                                        >
                                            <span className="font-semibold text-blue-600">{result.title}</span>
                                        </button>
                                    ))}
                                </div>
                            </div>
                        )}

                        <div className="grid lg:grid-cols-4 gap-6">
                            <div className="lg:col-span-1">
                                <div className="bg-white rounded-lg shadow-sm border border-gray-200 p-4 sticky top-6">
                                    <h3 className="font-semibold text-gray-900 mb-4">Sections</h3>
                                    <nav className="space-y-1">
                                        {Object.entries(sections).map(([key, section]) => {
                                            const Icon = section.icon;
                                            return (
                                                <button
                                                    key={key}
                                                    onClick={() => setActiveSection(key)}
                                                    className={`w-full flex items-center gap-2 px-3 py-2 rounded-lg text-sm transition-colors ${
                                                        activeSection === key
                                                            ? 'bg-blue-50 text-blue-700 font-semibold'
                                                            : 'text-gray-700 hover:bg-gray-50'
                                                    }`}
                                                >
                                                    <Icon className="h-4 w-4" />
                                                    {section.title}
                                                </button>
                                            );
                                        })}
                                    </nav>
                                </div>
                            </div>

                            <div className="lg:col-span-3">
                                <div className="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
                                    <div className="flex items-center gap-3 mb-6">
                                        {React.createElement(sections[activeSection].icon, { className: "h-6 w-6 text-blue-600" })}
                                        <h2 className="text-2xl font-bold text-gray-900">
                                            {sections[activeSection].title}
                                        </h2>
                                    </div>
                                    {sections[activeSection].content}
                                </div>

                                {activeSection === 'indicators' && (
                                    <div className="mt-6 bg-white rounded-lg shadow-sm border border-gray-200 p-6">
                                        <h3 className="text-xl font-bold text-gray-900 mb-4">Quick Reference: Key Indicators</h3>
                                        <div className="overflow-x-auto">
                                            <table className="w-full text-sm">
                                                <thead>
                                                    <tr className="border-b border-gray-200">
                                                        <th className="text-left py-2 px-3 font-semibold text-gray-900">Category</th>
                                                        <th className="text-left py-2 px-3 font-semibold text-gray-900">Indicator</th>
                                                        <th className="text-left py-2 px-3 font-semibold text-gray-900">Significance</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    {quickReference.map((item, idx) => (
                                                        <tr key={idx} className="border-b border-gray-100">
                                                            <td className="py-2 px-3 text-gray-700">{item.category}</td>
                                                            <td className="py-2 px-3 font-semibold text-gray-900">{item.indicator}</td>
                                                            <td className="py-2 px-3 text-gray-600">{item.significance}</td>
                                                        </tr>
                                                    ))}
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                )}

                                {activeSection === 'search' && (
                                    <div className="mt-6 bg-white rounded-lg shadow-sm border border-gray-200 p-6">
                                        <h3 className="text-xl font-bold text-gray-900 mb-4">Systematic Search Zones</h3>
                                        <div className="overflow-x-auto">
                                            <table className="w-full text-sm">
                                                <thead>
                                                    <tr className="border-b border-gray-200">
                                                        <th className="text-left py-2 px-3 font-semibold text-gray-900">Zone</th>
                                                        <th className="text-left py-2 px-3 font-semibold text-gray-900">Primary Areas</th>
                                                        <th className="text-left py-2 px-3 font-semibold text-gray-900">Tools Required</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    {searchZones.map((item, idx) => (
                                                        <tr key={idx} className="border-b border-gray-100">
                                                            <td className="py-2 px-3 font-semibold text-gray-900">{item.zone}</td>
                                                            <td className="py-2 px-3 text-gray-700">{item.areas}</td>
                                                            <td className="py-2 px-3 text-gray-600">{item.tools}</td>
                                                        </tr>
                                                    ))}
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                )}
                            </div>
                        </div>
                    </div>
                </div>
            );
        };

        ReactDOM.render(<InterdictionReference />, document.getElementById('root'));
    </script>
</body>
</html>
